/* 黑色主题 */
.darkScheme{
  --google-gray-50: rgb(248, 249, 250);
  --google-gray-100: rgb(241, 243, 244);
  --google-gray-300: rgb(218, 220, 224);
  --google-gray-500: rgb(154, 160, 166);
  --google-gray-600: rgb(128, 134, 139);
  --google-gray-700: rgb(95, 99, 104);
  --google-gray-800: rgb(60, 64, 67);
  --google-gray-900: rgb(32, 33, 36);
  --body-bg-color: rgb(0,0,0);/*背景颜色*/
  --text-color: var(--google-gray-100); /* 文本字体颜色*/
  --content-bg-color: var(--google-gray-800); /*文本背景颜色*/
  --blockquote-color: var(--google-gray-500); /*引用块字体颜色*/
  --btn-default-bg: var(--google-gray-800); /*按钮颜色*/
  --link-color: #35e7e9  /*链接颜色*/
}

.darkScheme .posts-expand .post-meta {
  color: var(--google-gray-500);
}

/* url颜色 */
.darkScheme a, span.exturl {
  color: var(--link-color);
}

/* hexo左上角名字的背景颜色 */
.darkScheme .site-brand-container {
  color: var(--google-gray-900);
}

.darkScheme .th, td {
  background: var(--content-bg-color);
  color: var(--text-color);
}


.darkScheme .highlight figcaption {
  background: var(--content-bg-color);
  color: var(--text-color);
}

.darkScheme .highlight-container .highlight .table-container{
  background: var(--content-bg-color);
}

.darkScheme .highlight .code pre {
  background: var(--content-bg-color);
}

.darkScheme .highlight .gutter pre {
  background: var(--content-bg-color);
}

.darkScheme .highlight, pre {
  color: var(--text-color);
}


.darkScheme img{
  filter:brightness(80%)
}

/*valine评论区评论者使用的客户端的背景颜色*/
.darkScheme .v .vlist .vcard .vhead .vsys {
  background: var(--google-gray-600);
}
/*valine评论区字体颜色*/
.darkScheme .v * {
  color: var(--text-color);
}
